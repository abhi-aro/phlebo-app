{
  "compilerOptions": {
    "baseUrl": ".",
    // Also add these paths to babel.config.js file for dynamic imports to work properly
    "paths": {
      "@assets/*": ["assets/*"],
      "@redux/*": ["components/redux/*"],
      "@utils/*": ["components/tools/utils/*"],
      "@hooks/*": ["components/tools/hooks/*"],
      "@globalModules/*": ["globalModules/*"],
      "@pages/*": ["components/pages/*"],
      "@custom/*": ["components/custom/*"]
    }
  },
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
}
